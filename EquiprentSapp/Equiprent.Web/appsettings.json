// APPSETTINGS.[SERVER_MACHINE_NAME].JSON FILE REQUIRED TO RUN THE APPLICATION
{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AuditTranslationPath": ".\\Data\\AuditTranlsations.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Fatal"
      }
    }
  },
  "WriteTo": [
    {
      "Name": "File",
      "Args": {
        "path": "Logs\\application_.txt",
        "fileSizeLimitBytes": "100000",
        "rollingInterval": "Day",
        "retainedFileCountLimit": "2",
        "rollOnFileSizeLimit": "true",
        "shared": "true",
        "flushToDiskInterval": "00:00:01"
      }
    }
  ],
  "SwaggerOptions": {
    "Name": "v1",
    "OpenApiInfo": {
      "Version": "v1"
    },
    "SecurityDefinition": {
      "Name": "Bearer",
      "OpenApiSecurityScheme": {
        "Name": "Authorization",
        "Type": "ApiKey",
        "Scheme": "Bearer",
        "BearerFormat": "JWT",
        "In": "Header",
        "Description": "JWT Authorization using the Bearer scheme."
      }
    }
  },
  "JwtOptions": {
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateIssuerSigningKey": true,
      "Key": "SecretKey#@123!#SecretKey#@123!#",
      "ValidateIssuer": true,
      "ValidIssuer": "http://localhost:61869/",
      "ValidateAudience": true,
      "ValidAudience": "http://localhost:4200/",
      "ValidateLifetime": true,
      "ClockSkew": "Zero",
      "RequireExpirationTime": true
    },
    "TokenExpirationInMinutes": 120
  }
}
